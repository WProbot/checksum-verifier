{
  "name": "pluginkollektiv/checksum-verifier",
  "version": "0.0.2",
  "description": "Verifies MD5 checksums of WordPress core files, sends e-mail warning in case of threat.",
  "keywords": [
    "wordpress",
    "plugin",
    "checksum",
    "verification"
  ],
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "Sergej MÃ¼ller",
      "homepage": "https://sergejmueller.github.io"
    },
    {
      "name": "pluginkollektiv",
      "homepage": "https://github.com/pluginkollektiv"
    }
  ],
  "type": "wordpress-plugin",
  "require": {
    "php": ">=5.3",
    "composer/installers": "~1.4.0"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.4",
    "php": ">=5.3",
    "squizlabs/php_codesniffer": "^3.1",
    "wimg/php-compatibility": "^8.0",
    "wp-coding-standards/wpcs": "~0.14"
  },
  "scripts": {
    "cs": [
      "phpcs --standard=phpcs.xml -s"
    ],
    "csfix": [
      "phpcbf --standard=phpcs.xml"
    ]
  }
}
